<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.timetableassistant.controller.ExportViewController"
      spacing="15" alignment="CENTER">

    <Label text="Export Orar" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Export Orar Studenți" fx:id="exportStudentsButton" onAction="#handleExportStudents"/>
        <Button text="Export Orar Profesori" fx:id="exportTeachersButton" onAction="#handleExportTeachers"/>
        <Button text="Export Orar Săli" fx:id="exportRoomsButton" onAction="#handleExportRooms"/>
        <Button text="Export Orar Discipline" fx:id="exportDisciplinesButton" onAction="#handleExportDisciplines"/>
    </HBox>

    <padding>
        <Insets top="20" left="10" right="10" bottom="10"/>
    </padding>

</VBox>
