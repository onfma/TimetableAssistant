<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.timetableassistant.controller.GroupsViewController"
      spacing="15" alignment="CENTER">

    <Label text="Grupe" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="groupTable" prefHeight="200" prefWidth="300">
        <columns>
            <TableColumn fx:id="groupNumberColumn" text="Number" prefWidth="150"/>
            <TableColumn fx:id="semiyearColumn" text="Semian" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="addButton" text="Adaugă grupă"/>
        <Button fx:id="editButton" text="Editează grupă"/>
        <Button fx:id="deleteButton" text="Șterge grupă"/>
    </HBox>

    <padding>
        <Insets top="20" left="10" right="10" bottom="10"/>
    </padding>
</VBox>