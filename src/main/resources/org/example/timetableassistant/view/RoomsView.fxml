<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.timetableassistant.controller.RoomsViewController"
      spacing="15" alignment="CENTER">

    <Label text="Săli" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <TableView fx:id="roomsTable" prefHeight="200" prefWidth="300">
        <columns>
            <TableColumn fx:id="roomNameColumn" text="Nume" prefWidth="150"/>
            <TableColumn fx:id="roomTypeColumn" text="Tip" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10">
        <Button fx:id="addButton" text="Sala nouă"/>
        <Button fx:id="editButton" text="Editeaza sală"/>
        <Button fx:id="deleteButton" text="Șterge sală"/>
    </HBox>

    <padding>
        <Insets top="20" left="10" right="10" bottom="10"/>
    </padding>
</VBox>
